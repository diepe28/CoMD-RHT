// My Laptop, 0,2 and 1,3 are HyperThreads, not replicated
mpirun -np 1 CoMD-WANG -e -i 1 -j 1 -k 1 -x 40 -y 40 -z 40 5 > baseline-1rank.txt &&
mpirun -np 2 CoMD-WANG -e -i 2 -j 1 -k 1 -x 40 -y 40 -z 40 5 > baseline-2ranks.txt &&
mpirun -np 4 CoMD-WANG -e -i 2 -j 2 -k 1 -x 40 -y 40 -z 40 5 > baseline-4ranks.txt &&

mpirun -np 1 CoMD-WANG -e -i 1 -j 1 -k 1 -x 40 -y 40 -z 40 5 2 0 1 > replicated-wang-1rank-noHT.txt &&
mpirun -np 1 CoMD-WANG -e -i 1 -j 1 -k 1 -x 40 -y 40 -z 40 5 2 0 2 > replicated-wang-1rank-HT.txt &&
mpirun -np 1 CoMD-WANG-VG -e -i 1 -j 1 -k 1 -x 40 -y 40 -z 40 5 2 0 1 > replicated-wang-vg-1rank-noHT.txt &&
mpirun -np 1 CoMD-WANG-VG -e -i 1 -j 1 -k 1 -x 40 -y 40 -z 40 5 2 0 2 > replicated-wang-vg-1rank-HT.txt &&
mpirun -np 1 CoMD-WANG-JV -e -i 1 -j 1 -k 1 -x 40 -y 40 -z 40 5 2 0 1 > replicated-wang-jv-1rank-noHT.txt &&
mpirun -np 1 CoMD-WANG-JV -e -i 1 -j 1 -k 1 -x 40 -y 40 -z 40 5 2 0 2 > replicated-wang-jv-1rank-HT.txt &&

mpirun -np 2 CoMD-WANG -e -i 2 -j 1 -k 1 -x 40 -y 40 -z 40 5 4 0 1 2 3 > replicated-wang-2ranks-noHT.txt &&
mpirun -np 2 CoMD-WANG -e -i 2 -j 1 -k 1 -x 40 -y 40 -z 40 5 4 0 2 1 3 > replicated-wang-2rank-HT.txt &&
mpirun -np 2 CoMD-WANG-VG -e -i 2 -j 1 -k 1 -x 40 -y 40 -z 40 5 4 0 1 2 3 > replicated-wang-vg-2ranks-noHT.txt &&
mpirun -np 2 CoMD-WANG-VG -e -i 2 -j 1 -k 1 -x 40 -y 40 -z 40 5 4 0 2 1 3 > replicated-wang-vg-2rank-HT.txt &&
mpirun -np 2 CoMD-WANG-JV -e -i 2 -j 1 -k 1 -x 40 -y 40 -z 40 5 4 0 1 2 3 > replicated-wang-jv-2ranks-noHT.txt &&
mpirun -np 2 CoMD-WANG-JV -e -i 2 -j 1 -k 1 -x 40 -y 40 -z 40 5 4 0 2 1 3 > replicated-wang-jv-2rank-HT.txt


