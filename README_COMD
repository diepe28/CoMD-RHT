#current tests

mpirun -np 1 CoMD-WANG -e -i 1 -j 1 -k 1 -x 40 -y 40 -z 40 5 > baseline-1rank.txt        &&
mpirun -np 1 CoMD-WANG -e -i 1 -j 1 -k 1 -x 40 -y 40 -z 40 5 2 0 2 > replicated-wang-1rank-noHT.txt        &&
mpirun -np 1 CoMD-WANG -e -i 1 -j 1 -k 1 -x 40 -y 40 -z 40 5 2 0 20 > replicated-wang-1rank-noHT.txt       &&
mpirun -np 1 CoMD-WANG-VG -e -i 1 -j 1 -k 1 -x 40 -y 40 -z 40 5 2 0 2 > replicated-wang-vg-1rank-noHT.txt  &&
mpirun -np 1 CoMD-WANG-VG -e -i 1 -j 1 -k 1 -x 40 -y 40 -z 40 5 2 0 20 > replicated-wang-vg-1rank-noHT.txt &&
mpirun -np 1 CoMD-WANG-JV -e -i 1 -j 1 -k 1 -x 40 -y 40 -z 40 5 2 0 2 > replicated-wang-jv-1rank-noHT.txt  &&
mpirun -np 1 CoMD-WANG-JV -e -i 1 -j 1 -k 1 -x 40 -y 40 -z 40 5 2 0 20 > replicated-wang-jv-1rank-noHT.txt &&

mpirun -np 1 CoMD-WANG -e -i 4 -j 2 -k 2 -x 65 -y 65 -z 65 5 > myBaseline16rank.txt  &&
mpirun -np 1 CoMD-WANG -e -i 4 -j 2 -k 2 -x 65 -y 65 -z 65 5 32 0 2 4 6 8 10 12 14 1 3 5 7 9 11 13 15 16 18 20 22 24 26 28 30 17 19 21 23 25 27 29 31 > myreplicated-wang-16rank-noHT.txt  &&
mpirun -np 1 CoMD-WANG -e -i 4 -j 2 -k 2 -x 65 -y 65 -z 65 5 32 0 16 2 18 4 20 6 22 8 24 10 26 12 28 14 30 1 17 3 19 5 21 7 23 9 25 11 27 13 29 15 31 > myreplicated-wang-16rank-HT.txt
mpirun -np 1 CoMD-WANG-VG -e -i 4 -j 2 -k 2 -x 65 -y 65 -z 65 5 32 0 2 4 6 8 10 12 14 1 3 5 7 9 11 13 15 16 18 20 22 24 26 28 30 17 19 21 23 25 27 29 31 > myreplicated-wang-vg-16rank-noHT.txt  &&
mpirun -np 1 CoMD-WANG-VG -e -i 4 -j 2 -k 2 -x 65 -y 65 -z 65 5 32 0 16 2 18 4 20 6 22 8 24 10 26 12 28 14 30 1 17 3 19 5 21 7 23 9 25 11 27 13 29 15 31 > myreplicated-wang-vg-16rank-HT.txt
mpirun -np 1 CoMD-WANG-JV -e -i 4 -j 2 -k 2 -x 65 -y 65 -z 65 5 32 0 2 4 6 8 10 12 14 1 3 5 7 9 11 13 15 16 18 20 22 24 26 28 30 17 19 21 23 25 27 29 31 > myreplicated-wang-jv-16rank-noHT.txt  &&
